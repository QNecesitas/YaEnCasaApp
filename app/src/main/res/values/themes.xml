<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YaEnCasa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Toolbar-->
    <style name="ToolbarIcons" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>







    <style name="Button_redonded_filled" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Shape_redonded</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1sp</item>\
        <item name="android:textSize">@dimen/x_short</item>
    </style>

    <style name="Shape_redonded" parent="">
        <item name="cornerSize">12sp</item>
    </style>



</resources>