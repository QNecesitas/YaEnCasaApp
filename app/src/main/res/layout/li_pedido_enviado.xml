<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30sp"
        android:layout_gravity="center">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:contentDescription="@string/cerrar"
                android:id="@+id/liPE_IV_cerrar"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/green_light"
                android:layout_gravity="end"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"/>

            <TextView

                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pedido_enviado_correctamente"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"/>

            <View
                android:layout_marginTop="4sp"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp" />

            <ImageView
                android:layout_marginTop="20sp"
                android:contentDescription="@string/pedido_enviado_correctamente"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/baseline_local_shipping_24"
                android:layout_gravity="center"
                app:tint="@color/green_light" />

            <TextView
                android:textAlignment="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/espere_la_confirmaci_n_de_su_pedido"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>

            <!--CardView ir a mis pedidios-->
            <androidx.cardview.widget.CardView
                android:id="@+id/liPE_CV_ir_a_pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12sp"
                android:layout_marginBottom="10sp"
                android:elevation="5sp"
                android:translationZ="5sp"
                app:cardCornerRadius="20sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ir_a_mis_pedidos"
                            android:layout_gravity="center"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@drawable/baseline_receipt_long_24"
                        android:layout_gravity="center" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--CardView ir a mis pedidios-->
            <androidx.cardview.widget.CardView
                android:id="@+id/liPE_CV_ir_a_Wapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="12sp"
                android:elevation="5sp"
                android:translationZ="5sp"
                app:cardCornerRadius="20sp">

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
