<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YaEnCasa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow_59</item>
        <item name="colorPrimaryVariant">@color/yellow_59</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_2B</item>
        <item name="colorSecondaryVariant">@color/orange_2B</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Toolbar-->
    <style name="ToolbarIcons" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="CustomBorderTIl" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="boxStrokeWidth">2sp</item>
    </style>


    <!--Button Redonded-->
    <style name="Button_redonded" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/Shape_redonded</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2sp</item>
    </style>


    <style name="Button_redonded_filled" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/Shape_redonded</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1sp</item>\
        <item name="android:textSize">@dimen/x_short</item>
    </style>

    <style name="Shape_redonded" parent="">
        <item name="cornerSize">12sp</item>
    </style>


</resources>